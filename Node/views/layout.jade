!!! 5
html
  head
    title= title
    link(href='http://fonts.googleapis.com/css?family=Averia+Libre:400,700', rel='stylesheet', type='text/css')
    script(src='http://code.jquery.com/jquery.min.js')
    :coffeescript
      window.view = (name) ->
        $.getJSON '/json/' + name, (data) -> console.log JSON.stringify data

      $ () ->
        $('#api h2').click () -> $('#api .desc').slideToggle()
    :stylus
      html
        font-family sans
        text-align center
        padding 3em
        background-image url('/images/wallpaper.jpg')
      html, input
        font-family: 'Averia Libre', cursive;
      h1
        font-size 5em
        color white
        text-shadow 0px 3px 0px #bbb, 0 0 15px white
      input 
        font-size 1.5em
        border-radius .5em
        border none
        padding .2em
        margin .2em
      #karma, #error
        margin-bottom 1em
      #karma
        font-size 5em
      #error
        font-size 2em
      #error
        color black
        text-shadow 0px 2px 0px red, 0 0 15px red
      #karma
        color #ddffaa
        text-shadow 0px 3px 0px #a3c86c, 0 0 15px white
      #api
        position absolute
        bottom 0em
        left 1em
        text-align left
      #api h2
        color #ab9874
      #api .desc
        display none
  body!= body